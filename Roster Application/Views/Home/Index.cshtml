@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Rostering Application</h1>

<form method="post">
    <div class="d-grid gap-4">
        <button class="btn btn-lg btn-primary" type="submit" asp-controller="Category" asp-action="CategoryOptions">Categories</button>
        <button class="btn btn-lg btn-primary" type="submit" asp-controller="Schedule" asp-action="ScheduleOptions">Schedules</button>
        <button class="btn btn-lg btn-primary" type="submit" asp-controller="Client" asp-action="ClientOptions">Client</button>
        <button class="btn btn-lg btn-primary" type="submit" asp-controller="Employee" asp-action="EmployeeOptions">Employee</button>
        <button class="btn btn-lg btn-primary" type="submit" asp-controller="Roster" asp-action="RosterOptions">Roster</button>
    </div>
</form>
</div>


